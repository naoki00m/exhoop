= render partial: "share/header"

.content
  .content__new
    .content__new__text
      = 'New Video'
    = form_with model: @video, local: true do |f|
      = f.text_field :name, placeholder: 'Title', autocomplete: 'off'
      = f.collection_select(:tag_id, @tags, :id, :name, {prompt: "Please select a category"})
      = f.text_area :description, id: 'text-area', placeholder: 'Description', autocomplete: 'off'
      .content__new__video
      .content__new__btns
        .content__new__btns__select
          = f.file_field :work, class: 'content__new__btns__select__file', id: 'upload-video'
          = icon('fa', 'photo-video')
          = 'Select'
        .content__new__btns__upload
          = icon('fa', 'upload')
          = 'Upload'
          = f.submit 'Upload', class: 'content__new__btns__upload__submit'

= render partial: "share/footer"