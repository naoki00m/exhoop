.header
  .header__title
    = link_to 'EXHOOP', root_path
  = form_with(url: search_videos_path, local: true, method: :get) do |f|
    .header__search
      .field
        = f.text_field :keyword, placeholder: "Search", class: "header__search__input", autocomplete: "off"
        = icon('fa', 'times-circle', class: 'header__search__reset')
      .field
        = f.submit "Search", class: "header__search__btn", style: "display: none"
  .header__option
    -if user_signed_in?
      = link_to new_video_path, class:'header__option__plus' do
        = icon('fa', 'plus', class: 'header__option__plus__icon')
        .header__option__plus__text
          = 'New'
      = link_to user_path(current_user.id), class:'header__option__user' do
        = icon('fa', 'user-circle', class: 'header__option__user__icon')
        .header__option__user__text
          = current_user.name
    - else 
      = link_to new_user_session_path, class:'header__option__user' do
        = icon('fa', 'user-circle', class: 'header__option__user__icon')
        .header__option__user__text
          = 'User'
